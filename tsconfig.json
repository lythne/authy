{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "layoutUI": ["./src/exports/ui/layout.ts"],
            "sharedUI": ["./src/exports/ui/shared.ts"],
            "viewsUI": ["./src/exports/ui/views.ts"],
            "layoutStyles": ["./src/exports/styles/layout.ts"],
            "sharedStyles": ["./src/exports/styles/shared.ts"],
            "viewsStyles": ["./src/exports/styles/views.ts"],
            "variableFonts": ["./src/exports/fonts/variable.ts"],
            "staticFonts": ["./src/exports/fonts/static.ts"],
            "fragmentsStyles": ["./src/exports/styles/fragments.ts"],
            "fragmentsUI": ["./src/exports/ui/fragments.ts"],
            "@/*": ["./src/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
